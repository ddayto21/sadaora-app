generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  profile  Profile?
}

model Profile {
  id        String   @id @default(uuid())
  userId    String   @unique
  name      String
  bio       String
  headline  String
  photoUrl  String?
  interests Interest[] // one-to-many relation
  user      User     @relation(fields: [userId], references: [id])
}

model Interest {
  id        String   @id @default(uuid())
  label     String
  profile   Profile  @relation(fields: [profileId], references: [id])
  profileId String
}